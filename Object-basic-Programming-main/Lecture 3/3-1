#include <iostream>

using namespace std;

int main(){
    int M[3][3]={{1,2,3},{4,5,6},{7,8,9}};
    int (*ptr)[3]; int *p; int **pt;
    ptr = M; 
    cout << ptr << M ; //0번째 행의 시작주소
    cout << ptr+1 << M+1; //1번째 행의 시작주소
    cout << *(ptr+1) << ptr[1] << *(M+1) << M[1]; //1번째 행의 시작주소 
    cout << **(ptr+1) << **(M+1) << *M[1] << M[1][0]; // 4 (1번째 행의 첫 요소)

    p = M[0]; //포인터 p는 M배열의 0번째 행의 시작주소를 가리킴킴
    cout << p << M[0] << *M; //M배열의 0번째행의 시작 주소
    cout << p+1 << M[0]+1 << *M+1; // M배열의  0번째 행에서 두번째 요소의 주소소
    cout << *(p+1) << *(M[0]+1) << *(*M+1); //2 (M배열의  0번째 행에서 두번째 요소)

    pt = &p; // pt = M; (X) //이차원배열이므로 이중포인터 직접대입 안됨됨
    cout << *pt << p ; //p M배열의 0번째 행의 시작주소
    cout << **pt << *p; //1 ( M배열의 0번째 행의 첫 번째 요소의 값 )


}
