#include <stdio.h>

int main(void){
    int i = 10;
    char c = 'A';
    double d = 2.1;

    //ν¬μΈν„° λ³€μ μ„ μ–Έκ³Ό μ΄κΈ°κ°’ ν• λ‹Ή
    int *ip = &i;
    char *cp = &c;
    double *dp = &d;


    /*
    π’΅ν¬μΈν„°μ νƒ€μ…μ΄ μΌμΉν•΄μ•Ό ν•λ” μ΄μ π’΅
        -intμ μ£Όμ†λ” intμ— doubleμ μ£Όμ†λ” doubleμ— charμ μ£Όμ†λ” charμ— ... μ €μ¥ν•λ” μ΄μ 

            --> ν¬μΈν„°μ— μμ¥λ μ£Όμ†κ°’μ΄ λ©”λ¨λ¦¬μ μƒμ„ μ£Όμ†κ°’λ§ μ €μ¥ν•κΈ° λ•λ¬Έ!!

            ex) ipλ” iλ¥Ό κ°€λ¦¬ν‚¤λ” κ²ƒμ΄ μ•„λ‹λΌ iμ μƒμ„ μ£Όμ†κ°’μ„ κ°€λ¦¬ν‚΄, μƒμ„ μ£Όμ†κ°’λ¶€ν„° 4byte(intν•:4byte, charν•:1byte, doubleν•:8byte ...)λ¥Ό μ½μ–΄μ•Ό 10μ΄λΌλ” κ°’μ„ μ½μ–΄λ‚Ό μ μλ”λ° 
                β…μ΄ μ£Όμ†(ipμκ°’ = iμ μ²«λ²μ§Έ μ£Όμ†)λ¶€ν„° 4byteλ¥Ό μ½μ–΄μ•Όλ¨ μ„ ν¬μΈν„°μ μλ£ν•μ„ λ³΄κ³  κ²°μ •ν•¨!!β…

    */

    //κ° ν¬μΈν„°μ— μ €μ¥λ κ°’(λ°μ΄ν„°κ°€ μ €μ¥λ μ£Όμ†κ°’κ°’) μ¶λ ¥
    printf("ipμ μ£Όμ† = %p\n", ip);
    printf("cpμ μ£Όμ† = %p\n", cp);
    printf("dpμ μ£Όμ† = %p\n\n", dp);

    //κ° ν¬μΈν„°κ°€ κ°€λ¦¬ν‚¤λ” κ°’(ν¬μΈν„° μ—­μ°Έμ΅°-->κ°’μ— κ°„μ ‘μ μΌλ΅ μ ‘κ·Ό) μ¶λ ¥
    printf("*ip = %d\n", *ip);
    printf("*cp = %c\n", *cp);
    printf("*dp = %.2lf", *dp);

    return 0;
}

